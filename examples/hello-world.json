{
  "id": "hello-world",
  "name": "Hello World Workflow",
  "description": "A simple test workflow that echoes a greeting",
  "inputs": {
    "name": "string"
  },
  "steps": [
    {
      "id": "greet",
      "type": "shell",
      "description": "Echo a greeting",
      "command": "echo 'Hello, {{inputs.name}}!'"
    },
    {
      "id": "timestamp",
      "type": "shell",
      "description": "Show current time",
      "command": "date",
      "after": ["greet"]
    }
  ]
}
